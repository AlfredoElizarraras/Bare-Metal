<h1> Create new user </h1>

<%= form_for @user do |f| %>
   <%= f.label :username, value: 'User name: ' %>
   <%= f.text_field :username, placeholder: 'Carlos' %><br>
   <%= f.label :email, value: 'E-mail' %>
   <%= f.text_field :email, placeholder: 'example@mail.com' %><br>
   <%= f.label :password %>
   <%= f.password_field :password, placeholder: '***' %><br>
   <%= f.submit "Submit" %>
 <% end %>