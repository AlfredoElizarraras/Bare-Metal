<h1> Create new user </h1>

<% if @user.errors.any? %>
 <div id="error_explanation">
   <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

   <ul>
   <% @user.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>

<%= form_for @user do |f| %>
   <%= f.label :username, value: 'User name: ' %>
   <%= f.text_field :username, placeholder: 'Carlos' %><br>
   <%= f.label :email, value: 'E-mail' %>
   <%= f.text_field :email, placeholder: 'example@mail.com' %><br>
   <%= f.label :password %>
   <%= f.password_field :password, placeholder: '***' %><br>
   <%= f.submit "Submit" %>
 <% end %>